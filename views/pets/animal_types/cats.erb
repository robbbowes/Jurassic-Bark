<h1>Here is a list of all our cats:</h1>

  <% for pet in @pets do %>
    <% cats_array = [] %>
    <% cats_array.push(pet) if pet.breed == "cat" && pet.adopted? != true %>

    <% for cat in cats_array do %>

      <p><%= cat.name %></p>
      <p><%= cat.admission_date %></p>
      <img src="<%= cat.picture %>">
      <p>Pet reference:<%= cat.id %></p>

      <% if cat.adoptable == true %>
        <p><%= cat.name %> is currently up for adoption!
          <form action="/adoptions/new">
            <input type="submit" value="Adopt me!">
          </form>
      <% end %>
      <p><a href="/pets/<%= cat.id %>/edit">Edit <%= cat.name %>?</a></p>
      <hr/>
    <% end %>
  <% end %>
