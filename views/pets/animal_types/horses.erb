<h1>Here is a list of all our horses:</h1>

<% for pet in @pets do %>
  <% horses_array = [] %>
  <% horses_array.push(pet) if pet.breed == "horse" && pet.adopted? != true %>

  <% for horse in horses_array do %>

    <p><%= horse.name %></p>
    <p><%= horse.admission_date %></p>
    <img src="<%= horse.picture %>">
    <p>Pet reference:<%= horse.id %></p>
    <% if horse.bairn_friendly == true %>
      <p>Great with kids!</p>
    <% end %>


    <% if horse.adoptable == true %>
      <p><%= horse.name %> is currently up for adoption!
        <form action="/adoptions/new">
          <input type="submit" value="Adopt me!">
        </form>
    <% end %>
    <p><a href="/pets/<%= horse.id %>/edit">Edit <%= horse.name %>?</a></p>
    <hr/>
  <% end %>
<% end %>
