<h1>Here is a list of all our currently adoptable birds:</h1>

  <% for pet in @pets do %>
    <% birds_array = [] %>
    <% birds_array.push(pet) if pet.breed == "bird" && pet.adopted? != true %>

    <% for bird in birds_array do %>

      <p><%= bird.name %></p>
      <p><%= bird.admission_date %></p>
      <img src="<%= bird.picture %>">
      <p>Pet reference:<%= bird.id %></p>
      <% if bird.bairn_friendly == true %>
        <p>Great with kids!</p>
      <% end %>


      <% if bird.adoptable == true %>
        <p><%= bird.name %> is currently up for adoption!
          <form action="/adoptions/new">
            <input type="submit" value="Adopt me!">
          </form>
      <% end %>
      <p><a href="/pets/<%= bird.id %>/edit">Edit <%= bird.name %>?</a></p>
      <hr/>
    <% end %>
  <% end %>
