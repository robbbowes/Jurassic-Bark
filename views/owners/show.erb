  <h2><%= @owner.name %></h2>

  <p>Address: <%= @owner.address1 %></p>

    <% unless @owner.address2 == "" %>
      <p>Address: <%= @owner.address2 %></p>
    <% end %>

  <p>Town: <%= @owner.town %></p>
  
    <% if @owner.bairns == true %>
      <p>Please note that this person has young children.</p>
    <% end %>

  <a href="/owners/<%= @owner.id %>/edit">Edit owner</a>
