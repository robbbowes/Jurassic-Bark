<h1>Here is a list of all our other animals:</h1>

<% for pet in @pets do %>
  <% others_array = [] %>
  <% others_array.push(pet) if pet.breed == "other" && pet.adopted? != true %>

  <% for other in others_array do %>

    <p><%= other.name %></p>
    <p><%= other.admission_date %></p>
    <img src="<%= other.picture %>">
    <p>Pet reference:<%= other.id %></p>
    <% if other.bairn_friendly == true %>
      <p>Great with kids!</p>
    <% end %>


    <% if other.adoptable == true %>
      <p><%= other.name %> is currently up for adoption!
        <form action="/adoptions/new">
          <input type="submit" value="Adopt me!">
        </form>
    <% end %>
    <p><a href="/pets/<%= other.id %>/edit">Edit <%= other.name %>?</a></p>
    <hr/>
  <% end %>
<% end %>
