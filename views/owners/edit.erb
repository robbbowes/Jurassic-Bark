<h1>Edit <% @owner.name %></h1>
<form action="/owners/<%= @owner.id %>" method="POST">
  <div class="form-wrapper">

    <div class="form">
      <label for="first_name">First name:</label>
      <input type="text" name="first_name" id="first_name" value="<%= @owner.first_name %>"/>
    </div>

    <div class="form">
      <label for="surname">Surname</label>
      <input type="text" name="surname" id="surname" value="<%= @owner.surname %>"/>
    </div>

    <div class="form">
      <label for="address1">Address:</label>
      <input type="text" name="address1" id="address1" value="<%= @owner.address1 %>"/>
    </div>

    <div class="form">
      <label for="address2">Address:</label>
      <input type="text" name="address2" id="address2" value="<%= @owner.address2 %>"/>
    </div>

    <div class="form">
      <label for="town">Town</label>
      <input type="text" name="town" id="town" value="<%= @owner.town.upcase %>"/>
    </div>

    <div class="form">
      <label for="owner_picture">Picture:</label>
      <input type="text" name="owner_picture" id="owner_picture" value="<%= @owner.owner_picture %>">
    </div>

<input type="submit" value="Edit owner"/>

</form>
